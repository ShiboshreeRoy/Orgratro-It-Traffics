<% content_for :title, "Random Link" %>

<div class="w-full max-w-xl mx-auto px-4 py-10">
  <div class="bg-white shadow-md rounded-xl p-6 mb-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Here's a Link for You</h1>
    
    <p class="text-lg text-gray-700 break-words mb-4">
      <%= @link.url %>
    </p>

    <div class="flex gap-3">
      <%= link_to "Visit & Show Next", visit_link_path(@link), 
            class: "inline-block px-5 py-2.5 rounded-md bg-blue-600 text-white hover:bg-blue-500 font-medium transition" %>

      <%= link_to "Skip & Show Next", show_random_links_path,
            class: "inline-block px-5 py-2.5 rounded-md bg-gray-100 hover:bg-gray-200 font-medium transition" %>
    </div>
  </div>
</div>
