<% content_for :title, "Link Details" %>

<div class="w-full max-w-2xl mx-auto px-4 py-10">

  <!-- Flash Notice -->
  <% if notice.present? %>
    <div id="notice" class="mb-6 inline-block px-4 py-2 bg-green-100 text-green-700 font-semibold rounded-md shadow-sm">
      <%= notice %>
    </div>
  <% end %>

  <!-- Page Title -->
  <h1 class="text-3xl font-extrabold text-gray-800 mb-6">Link Details</h1>

  <!-- Rendered Link Partial -->
  <div class="bg-white shadow-md rounded-xl p-6 mb-6">
    <%= render @link %>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-3">

    <%= link_to "âœï¸ Edit", edit_link_path(@link),
          class: "inline-block text-sm font-medium px-5 py-2.5 rounded-md bg-yellow-50 hover:bg-yellow-100 text-yellow-700 transition" %>

    <%= link_to "â† Back to All Links", links_path,
          class: "inline-block text-sm font-medium px-5 py-2.5 rounded-md bg-gray-100 hover:bg-gray-200 text-gray-700 transition" %>

    <%= button_to "ğŸ—‘ï¸ Delete", @link, method: :delete,
          form_class: "sm:inline-block",
          class: "inline-block text-sm font-medium px-5 py-2.5 rounded-md bg-red-600 hover:bg-red-500 text-white transition",
          data: { turbo_confirm: "Are you sure you want to delete this link?" } %>

  </div>

</div>
