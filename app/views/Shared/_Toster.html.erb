<!-- ✅ Toast Notifications -->
<div id="toast-container" class="fixed top-4 right-4 z-50 space-y-4">
  <% if notice %>
    <div id="toast-notice" class="flex items-start p-4 bg-green-100 text-green-800 rounded-lg shadow-lg border border-green-300 animate-slide-in">
      <svg class="w-6 h-6 mr-2 mt-0.5 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 13l4 4L19 7" />
      </svg>
      <div class="flex-grow text-sm font-medium"><%= notice %></div>
      <button onclick="this.parentElement.remove()" class="ml-4 text-green-700 hover:text-green-900 font-bold">&times;</button>
    </div>
  <% end %>

  <% if alert %>
    <div id="toast-alert" class="flex items-start p-4 bg-red-100 text-red-800 rounded-lg shadow-lg border border-red-300 animate-slide-in">
      <svg class="w-6 h-6 mr-2 mt-0.5 text-red-500" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18.364 5.636l-12.728 12.728M5.636 5.636l12.728 12.728" />
      </svg>
      <div class="flex-grow text-sm font-medium"><%= alert %></div>
      <button onclick="this.parentElement.remove()" class="ml-4 text-red-700 hover:text-red-900 font-bold">&times;</button>
    </div>
  <% end %>
</div>

<!-- ✅ Tailwind Custom Animations -->
<style>
@keyframes slide-in {
  0% {
    opacity: 0;
    transform: translateX(100%);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.animate-slide-in {
  animation: slide-in 0.5s ease-out forwards;
}
</style>

<!-- ✅ Auto Dismiss after 4 seconds -->
<script>
  setTimeout(() => {
    const notice = document.getElementById("toast-notice");
    if (notice) notice.remove();

    const alert = document.getElementById("toast-alert");
    if (alert) alert.remove();
  }, 4000); // 4 seconds
</script>
