      </details>
    </div>
  </section>

  <!-- Floating Circles (decorative) -->
  <div aria-hidden="true" class="fixed top-24 left-12 w-28 h-28 bg-indigo-200 rounded-full opacity-20 animate-[float_7s_ease-in-out_infinite]"></div>
  <div aria-hidden="true" class="fixed bottom-24 right-16 w-36 h-36 bg-indigo-300 rounded-full opacity-15 animate-[float_9s_ease-in-out_infinite]"></div>

  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-25px); }
    }
  </style>

  <script>
    // Scroll Reveal Logic
    function revealOnScroll() {
      const reveals = document.querySelectorAll('.reveal');
      const windowHeight = window.innerHeight;
      const revealPoint = 150;

      reveals.forEach(el => {
        const top = el.getBoundingClientRect().top;
        if (top < windowHeight - revealPoint) {
          el.classList.add('active');
        }
      });
    }

    window.addEventListener('scroll', revealOnScroll);
    window.addEventListener('load', revealOnScroll);
  </script>

</body>
</html>
