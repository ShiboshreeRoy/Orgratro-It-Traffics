<div class="">
  <!-- Hero -->
  <header class="bg-indigo-700 text-white py-20 px-6 text-center relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-white via-indigo-400 to-indigo-900 transform scale-125 blur-3xl animate-pulse"></div>
    <h1 class="text-5xl font-extrabold mb-4 relative z-10" data-aos="zoom-in">Explore Our Premium Features</h1>
    <p class="text-lg max-w-2xl mx-auto opacity-90 relative z-10" data-aos="fade-up" data-aos-delay="200">
      Unlock a suite of tools designed to elevate your digital presence, optimize performance, and increase business growth.
    </p>
  </header>

  <!-- Features Grid -->
  <section class="max-w-7xl mx-auto px-6 py-24">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-bold text-indigo-800">Why Choose Us</h2>
      <p class="text-gray-600 mt-4 max-w-2xl mx-auto">
        Every feature is tailored to deliver real business value with a premium user experience.
      </p>
    </div>
    <div class="grid gap-12 md:grid-cols-3">
      <!-- Feature Card -->
      <% features = [
        {
          icon: "<path d='M13 7H7v6h6V7z' /><path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm-3-9a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1H8a1 1 0 01-1-1V9z' clip-rule='evenodd' />",
          title: "Real-Time Analytics",
          desc: "Monitor traffic, user behavior, and trends in real-time with easy-to-understand dashboards."
        },
        {
          icon: "<path d='M10.707 3.293a1 1 0 00-1.414 0L5.586 7H4a1 1 0 100 2h1.586l3.707 3.707a1 1 0 001.414-1.414L7.414 9H16a1 1 0 100-2H7.414l3.293-3.293a1 1 0 000-1.414z' />",
          title: "Advanced Integrations",
          desc: "Easily connect with your favorite apps and tools for seamless automation and workflow."
        },
        {
          icon: "<path d='M4 3a1 1 0 011-1h2a1 1 0 01.707.293L9 3h6a1 1 0 011 1v2H4V3z' /><path fill-rule='evenodd' d='M4 7h12v9a1 1 0 01-1 1H5a1 1 0 01-1-1V7zm5 2a1 1 0 10-2 0v3a1 1 0 002 0V9zm4 0a1 1 0 10-2 0v3a1 1 0 002 0V9z' clip-rule='evenodd' />",
          title: "Secure Cloud Storage",
          desc: "Store, manage, and access your data with our highly secure and encrypted cloud solution."
        }
      ] %>

      <% features.each_with_index do |f, i| %>
        <div class="bg-white shadow-xl rounded-2xl p-8 hover:shadow-2xl transform hover:-translate-y-2 hover:rotate-[0.5deg] transition-all duration-500 ease-[cubic-bezier(.175,.885,.32,1.275)] perspective-1000" data-aos="flip-left" data-aos-delay="<%= i * 200 %>">
          <div class="mb-4 text-amber-500">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <%= raw f[:icon] %>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-indigo-700 mb-2"><%= f[:title] %></h3>
          <p class="text-gray-600"><%= f[:desc] %></p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="bg-indigo-700 py-20 text-center text-white relative overflow-hidden">
    <div class="absolute inset-0 blur-3xl opacity-20 bg-gradient-to-tr from-white via-indigo-400 to-purple-900 animate-spin-slow rounded-full scale-150"></div>
    <div class="relative z-10" data-aos="zoom-in">
      <h2 class="text-4xl font-bold mb-4">Ready to experience the premium edge?</h2>
      <p class="text-lg mb-8">Join thousands of happy users and start optimizing your growth with confidence.</p>
      <%= link_to "Get Started Today", new_user_registration_path, class: "inline-block px-8 py-4 bg-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:bg-indigo-800 hover:scale-105 transform transition-all duration-300" %>
    </div>
  </section>
</div>
<!-- AOS Animation Library -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    AOS.init({ duration: 1200 });
  });
</script>
