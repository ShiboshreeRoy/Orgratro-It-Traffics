<%# app/views/kaminari/_paginator.html.erb %>
<nav class="mt-6 flex justify-center">
  <ul class="inline-flex items-center space-x-1 text-sm">
    <% if paginator.prev_page %>
      <%= link_to raw("&laquo;"), url_for(page: paginator.prev_page), class: "px-3 py-1 rounded bg-gray-100 hover:bg-gray-300" %>
    <% end %>

    <% paginator.each_page do |page| %>
      <% if page %>
        <li>
          <%= link_to page, url_for(page: page), class: "px-3 py-1 rounded #{page == current_page ? 'bg-indigo-600 text-white' : 'bg-gray-100 hover:bg-gray-300'}" %>
        </li>
      <% else %>
        <li class="px-3 py-1 text-gray-500">â€¦</li>
      <% end %>
    <% end %>

    <% if paginator.next_page %>
      <%= link_to raw("&raquo;"), url_for(page: paginator.next_page), class: "px-3 py-1 rounded bg-gray-100 hover:bg-gray-300" %>
    <% end %>
  </ul>
</nav>
