<% content_for :title, "Update User Balance" %>

<div class="max-w-xl mx-auto mt-10 bg-white p-6 shadow rounded-lg">
  <h1 class="text-2xl font-bold mb-4 text-indigo-700">Update User Balance</h1>

  <% if flash[:notice] %>
    <p class="text-green-600 mb-3 font-semibold"><%= flash[:notice] %></p>
  <% elsif flash[:alert] %>
    <p class="text-red-600 mb-3 font-semibold"><%= flash[:alert] %></p>
  <% end %>

  <%= form_with url: admin_balance_path, method: :post, local: true do %>
    <div class="mb-4">
      <%= label_tag :email, "User Email", class: "block font-medium text-gray-700" %>
      <%= email_field_tag :email, nil, class: "w-full mt-1 border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= label_tag :balance, "New Balance", class: "block font-medium text-gray-700" %>
      <%= number_field_tag :balance, nil, step: "0.0000000001", class: "w-full mt-1 border rounded px-3 py-2" %>
    </div>

    <%= submit_tag "Update Balance", class: "bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded" %>
  <% end %>
</div>
